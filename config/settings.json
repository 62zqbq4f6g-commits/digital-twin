{
  "project": {
    "name": "Digital Twin Note Agent",
    "version": "0.1.0",
    "owner": "Rox"
  },
  "paths": {
    "inbox": "data/inbox",
    "archive": "data/archive",
    "database": "data/notes.json"
  },
  "watcher": {
    "debounce_seconds": 2,
    "file_patterns": [".txt", ".md"]
  },
  "classification": {
    "default_system": "personal",
    "confidence_threshold": 0.6,
    "personal_keywords": ["family", "health", "gym", "friend", "hobby", "home", "feeling", "weekend", "vacation", "mom", "dad", "exercise", "relax", "meditation", "sleep", "birthday", "dinner", "movie", "relationship", "kids", "wife", "husband", "pet"],
    "work_keywords": ["velolume", "meeting", "client", "investor", "revenue", "deadline", "project", "team", "strategy", "product", "business", "api", "integration", "partnership", "mcp", "n8n", "creator", "pitch", "deck", "roadmap", "sprint", "launch", "startup", "funding", "sales", "marketing", "hire", "trust", "spv", "governance", "proposal", "jv", "structure"]
  }
}
